{
    "manifest_version": 3,
    "name": "New Tab Background",
    "description": "customize new tab background image. (!important: image size should be < 5MB)",
    "version": "1.3.0",
    "icons": {
        "128": "img/icon128.png",
        "48": "img/icon48.png",
        "32": "img/icon32.png",
        "16": "img/icon16.png"
    },
    "action": {
        "default_icon": {
            "128": "img/icon128.png",
            "48": "img/icon48.png",
            "32": "img/icon32.png",
            "16": "img/icon16.png"
        },
        "default_title": "NTExt",
        "default_popup": "popups/index.html"
    },
    "chrome_url_overrides": {
        "newtab": "popups/newtab/newtab.html"
    },
    "options_page": "popups/settings/settings.html"
}